{
  "compilerOptions": {
    /* File layout */
    "rootDir": "src",
    "outDir": "dist",

    /* Node/TS environment */
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node"],

    /* Interop so `import express from "express"` works */
    "esModuleInterop": true,

    /* Useful defaults for a server project */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Disable ESM-only checks for our CJS build */
    "verbatimModuleSyntax": false

    /* Optional: if you don't need .d.ts outputs, leave these off
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false
    */
  },
  "include": ["src"]
}
